<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:ems="11"
            android:layout_height="wrap_content"
            android:hint="@string/activity_name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_activity_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/reg_usr_username"
            android:layout_width="wrap_content"
            android:ems="11"
            android:layout_height="wrap_content"
            android:hint="@string/activity_type" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/activity_time"
        android:text="@string/activity_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Chronometer
        android:id="@+id/chronometer_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_distance"
        android:text="@string/activity_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/activity_speed"
        android:text="@string/activity_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />

    <Button
        android:id="@+id/activity_start_button"
        android:text="@string/activity_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_stop_button"
        android:text="@string/activity_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>