<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_training_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="asee.giiis.unex.es.mysporttraining.TrainingNewActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/create_training_input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/create_training_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:hint="@string/create_training"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/create_training_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/create_training_list"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_exercises_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/create_training_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_training_add_button"/>



</LinearLayout>

