<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="asee.giiis.unex.es.mysporttraining.Fragments.CalendarFragment">


    <TextView
        android:id="@+id/mes"
        android:contentDescription="@string/calendar_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/compact_calendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="#F1F8E9"
        app:compactCalendarTextColor="#000"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#FFE0B2"
        app:compactCalendarCurrentDayBackgroundColor="@color/colorAccent"
        app:compactCalendarMultiEventIndicatorColor="#EF6C00" />

</LinearLayout>
